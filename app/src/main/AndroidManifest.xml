<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wonders.simulator">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/graph"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GraphActivity"
            android:label="Graph"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StatisticsActivity"
            android:label="Statistics"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConfigurationActivity"
            android:label="Simulation Settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Simulator_main"
            android:label="Simulator"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SensorList"
            android:label="@string/title_activity_sensor_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>