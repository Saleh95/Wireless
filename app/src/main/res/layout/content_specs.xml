<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_specs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="64dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="wonders.simulator.SpecsActivity"
    tools:showIn="@layout/activity_specs"
    android:orientation="vertical"
    >

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/observation"
        android:layout_height="wrap_content"
        android:text="Observation:" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/theta_input"
        android:layout_height="wrap_content"
        android:text="Theta:" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/sensors_input"
        android:layout_height="wrap_content"
        android:text="Sensors:" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/power_input"
        android:layout_height="wrap_content"
        android:text="Power:" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/vVar_input"
        android:layout_height="wrap_content"
        android:text="V-Variance:" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/nVar_input"
        android:layout_height="wrap_content"
        android:text="N-Variance:" />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/channel_input"
            android:layout_height="wrap_content"
            android:text="Channel:" />
        <RadioButton android:id="@+id/awgn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AWGN"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/rician"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rician with K"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/alpha_input"
            android:layout_height="wrap_content"
            android:text="Alpha" />
        <RadioButton android:id="@+id/optimum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Optimum"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/uniform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uniform"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/submit_button"
        android:text="Button" />


</RelativeLayout>
